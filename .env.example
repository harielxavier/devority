# ==========================================
# DEVORITY ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env.local and fill in your values

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/devority?schema=public"

# ==========================================
# EMAIL SERVICE (Resend)
# ==========================================
# Get your API key from https://resend.com
RESEND_API_KEY="re_YOUR_API_KEY_HERE"

# Business email to receive contact form submissions
BUSINESS_EMAIL="hi@devority.io"

# ==========================================
# AUTHENTICATION (Supabase)
# ==========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_ANON_KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# ==========================================
# SITE CONFIGURATION
# ==========================================
# Your production domain
NEXT_PUBLIC_SITE_URL="https://devority.io"

# ==========================================
# PAYMENT PROCESSING (Stripe) - Future
# ==========================================
# STRIPE_SECRET_KEY="sk_live_YOUR_KEY"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_KEY"
# STRIPE_WEBHOOK_SECRET="whsec_YOUR_SECRET"

# ==========================================
# ANALYTICS (Optional)
# ==========================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ==========================================
# ERROR TRACKING (Sentry) - Optional
# ==========================================
# SENTRY_DSN="https://YOUR_DSN@sentry.io/YOUR_PROJECT"
# NEXT_PUBLIC_SENTRY_DSN="https://YOUR_DSN@sentry.io/YOUR_PROJECT"
# SENTRY_AUTH_TOKEN="YOUR_AUTH_TOKEN"

# ==========================================
# DEVELOPMENT
# ==========================================
# Set to "development" for local, "production" for live
NODE_ENV="development"

# Port for local development
PORT=3000

# ==========================================
# SECURITY
# ==========================================
# Random string for session encryption (generate with: openssl rand -hex 32)
NEXTAUTH_SECRET="YOUR_32_CHAR_RANDOM_STRING"
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# API RATE LIMITING
# ==========================================
# Max requests per hour per IP
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=3600000

# ==========================================
# MONITORING (Optional)
# ==========================================
# DATADOG_API_KEY="YOUR_KEY"
# NEW_RELIC_LICENSE_KEY="YOUR_KEY"